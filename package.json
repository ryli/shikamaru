{
  "name": "umi-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "umi dev",
    "start:no-mock": "cross-env MOCK=none umi dev",
    "build": "ANALYZE=1 umi build",
    "lint": "eslint --ext .js src test && npm run lint:style",
    "lint:fix": "eslint --fix --ext .js src mock test && npm run lint:style",
    "lint:style": "stylelint \"src/**/*.less\" --syntax less",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js",
    "tslint": "npm run tslint:fix",
    "tslint:fix": "tslint --fix 'src/**/*.ts*'",
    "test": "umi test",
    "test:component": "umi test ./src/components",
    "test:all": "node ./test/run-tests.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "antd": "^3.11.2",
    "classnames": "^2.2.6",
    "dva": "^2.4.1",
    "dva-logger": "^1.0.0",
    "lodash": "^4.17.11",
    "mockjs": "^1.0.1-beta3",
    "moment": "^2.23.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "roadhog-api-doc": "^1.1.2",
    "umi": "^2.2.8",
    "umi-plugin-react": "^1.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "cross-env": "^5.2.0",
    "cross-port-killer": "^1.0.1",
    "eslint": "^5.10.0",
    "eslint-config-blued-react": "0.0.12",
    "eslint-config-blued-typescript": "0.0.15",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-typescript": "^0.12.0",
    "husky": "^1.3.0",
    "lint-staged": "^8.1.0",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "typescript": "^3.0.3",
    "typescript-eslint-parser": "^18.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,ts,tsx,jsx}": [
        "eslint --fix",
        "git add"
      ],
      "**/*.less": "stylelint --syntax less"
    },
    "ignore": ["**/pages/.umi/*"]
  }
}
